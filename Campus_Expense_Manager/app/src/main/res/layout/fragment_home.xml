<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="horizontal"
    android:background="#171b27">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/imgUser"
                android:src="@drawable/iconsvip"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imgUser"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/imgUser"
                android:text="JACKY CHUN "
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_alignTop="@id/imgUser"
                android:layout_marginStart="12dp"
                android:layout_marginTop="23dp"
                android:layout_toEndOf="@id/imgUser"
                android:text="Hello JACKMA"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_margin="10dp"
            android:background="#E8E1E1"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >

            <TextView
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:text="VISA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:textSize="40sp"
                android:text="BUI HOANG LONG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:text="1,200,000 VND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAddExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Add Expense" />

            <Button
                android:id="@+id/btnDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@id/btnAddExpense"
                android:text="Display All" />
        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="10dp"

                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_centerHorizontal="true"

                        android:background="@drawable/shape_border_blue"
                        android:layout_margin="20dp"
                        android:id="@+id/category1"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_centerInParent="true"
                            android:src="@drawable/item1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>


                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/category1"
                        android:layout_centerHorizontal="true"
                        android:text="Shopping"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="10sp" />
                </RelativeLayout>





                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="@drawable/shape_border_grey"
                        android:layout_margin="20dp"
                        android:id="@+id/category2"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_centerInParent="true"
                            android:src="@drawable/bankpayment"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/category2"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:text="Bank payment"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="@drawable/shape_border_orange"

                        android:layout_margin="20dp"
                        android:id="@+id/category3"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_centerInParent="true"
                            android:src="@drawable/item4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>


                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_below="@id/category3"
                        android:layout_centerHorizontal="true"
                        android:text="Salary"
                        android:textSize="10sp" />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:background="@drawable/shape_border_blue"
                        android:textColor="@color/white"
                        android:layout_margin="20dp"
                        android:id="@+id/category4"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_centerInParent="true"
                            android:src="@drawable/item3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>


                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_below="@id/category4"
                        android:layout_centerHorizontal="true"
                        android:text="Service Bills"
                        android:textSize="10sp" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:background="@drawable/shape_border_pink"

                        android:layout_margin="20dp"
                        android:id="@+id/category5"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_centerInParent="true"
                            android:src="@drawable/item5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/category5"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:text="House fee"
                        android:textSize="10sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="@drawable/shape_border_red"
                        android:layout_margin="20dp"
                        android:id="@+id/category6"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_centerInParent="true"
                            android:src="@drawable/item6"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/category6"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:text="Insurance fee"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </RelativeLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>




</androidx.core.widget.NestedScrollView>